<Window x:Class="Kabanova_Lab7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kabanova_Lab7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
      <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock x:Name="Res2" Margin="10 0 5 0" Width="50" Height="280" FontSize="15"/>
            <TextBlock x:Name="Result" Margin="0" Width="300" Height="280" TextWrapping="Wrap" FontSize="15"/>

        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Generate" Margin="10 20" Width="100" Click="Button_Click"/>
            <Button Content="Duplicate" Margin="10 20" Width="100" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>
